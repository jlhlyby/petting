<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 自定义对话框 -->
    <style name="MyDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <!-- 去除标题 -->
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--横线-->
    <style name="myLine_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#10000000</item>
    </style>

    <!--横线-->
    <style name="myLine_h_3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3px</item>
        <item name="android:background">#10000000</item>
    </style>
    <!-- 输入框样式 -->
    <style name="PetEditStyle">
        <item name="android:background">@drawable/pet_shape_edit_bg</item>
        <item name="android:textColorHint">@color/text_black_30</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textCursorDrawable">@drawable/pet_shape_edit_cursor</item>
    </style>
    <style name="PetButtonSyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/pet_selector_btn</item>
    </style>
    <!-- 账号中浅灰标题样式 -->
    <style name="PetLoginLGTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_light_grey</item>
        <item name="android:textSize">16dp</item>
    </style>
    <!-- 账号中黑色标题样式 -->
    <style name="PetLoginBTextStyle" parent="PetLoginLGTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- 账号中灰色标题样式 -->
    <style name="PetLoginGTextStyle" parent="PetLoginLGTextStyle">
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="text_roboto_regular">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="text_roboto_medium">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="text_roboto_light">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="text_sans_regular">
        <item name="android:fontFamily">sans</item>
    </style>

    <style name="text_sans_light">
        <item name="android:fontFamily">sans-light</item>
    </style>

    <style name="text_sans_medium">
        <item name="android:fontFamily">sans-condensed</item>
    </style>

</resources>
