<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="450px"
        android:layout_height="588px"
        app:cardCornerRadius="10px"
        app:cardElevation="5px"
        app:cardMaxElevation="10px"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/fsci_small_icon"
            android:layout_width="51px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21px"
            android:layout_marginTop="18px"
            android:src="@mipmap/gps_icon" />

        <TextView
            android:id="@+id/fsci_con"
            style="@style/text_sans_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="76px"
            android:layout_marginTop="27px"
            android:text="附近宠物"
            android:textColor="@color/text_black_30"
            android:textSize="35px" />
        <!--头像-->
        <com.petting.app.view.CircularImage
            android:id="@+id/fsci_icon"
            android:layout_width="210px"
            android:layout_height="210px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="103px"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/fsci_name"
            style="@style/text_sans_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="330px"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="42px" />

        <TextView
            android:id="@+id/fsci_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="387px"
            android:text="@string/app_name"
            android:textColor="@color/text_black_50"
            android:textSize="36px" />

        <TextView
            android:id="@+id/fsci_to_care"
            style="@style/text_sans_medium"
            android:layout_width="192px"
            android:layout_height="63px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="468px"
            android:background="@drawable/care_text_c"
            android:gravity="center"
            android:text="加关注"
            android:textColor="@color/text_orange"
            android:textSize="36px" />

    </android.support.v7.widget.CardView>
</RelativeLayout>